{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src/**/*", "app.js", "server.js"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true
  }
}
